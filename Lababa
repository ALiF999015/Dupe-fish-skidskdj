-- Function to execute 4 scripts
local function executeScripts()
	-- Script 1
	pcall(function()
		local args = {"Scavenge"}
		game:GetService("ReplicatedStorage"):WaitForChild("ComsEvents"):WaitForChild("Tasks"):WaitForChild("ToolHandler"):InvokeServer(unpack(args))
	end)
	
	-- Script 2
	pcall(function()
		local args = {"UpdateDigProgress", -1}
		game:GetService("ReplicatedStorage"):WaitForChild("ComsEvents"):WaitForChild("Tasks"):WaitForChild("TaskHandler"):FireServer(unpack(args))
	end)
	
	-- Script 3
	pcall(function()
		local args = {"UpdateDigProgress", 0.5}
		game:GetService("ReplicatedStorage"):WaitForChild("ComsEvents"):WaitForChild("Tasks"):WaitForChild("TaskHandler"):FireServer(unpack(args))
	end)
	
	-- Script 4
	pcall(function()
		local args = {"MiniGameFinished", true}
		game:GetService("ReplicatedStorage"):WaitForChild("ComsEvents"):WaitForChild("Tasks"):WaitForChild("ToolHandler"):InvokeServer(unpack(args))
	end)
end

-- Update speed from textbox
speedTextBox.FocusLost:Connect(function(enterPressed)
	local speed = tonumber(speedTextBox.Text)
	if speed and speed > 0 then
		loopSpeed = speed
		speedTextBox.Text = tostring(speed)
	else
		speedTextBox.Text = tostring(loopSpeed)
		warn("Speed must be a positive number!")
	end
end)

-- Loop function
local function startLoop()
	while isLooping do
		executeScripts()
		wait(loopSpeed)
	end
end

-- Toggle loop on button click
loopButton.MouseButton1Click:Connect(function()
	isLooping = not isLooping
	
	if isLooping then
		loopButton.Text = "⏸ STOP LOOP"
		loopButton.BackgroundColor3 = Color3.fromRGB(255, 80, 80)
		buttonGradient.Color = ColorSequence.new{
			ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 100, 100)),
			ColorSequenceKeypoint.new(1, Color3.fromRGB(200, 80, 80))
		}
		spawn(startLoop)
	else
		loopButton.Text = "▶ START LOOP"
		loopButton.BackgroundColor3 = Color3.fromRGB(80, 80, 255)
		buttonGradient.Color = ColorSequence.new{
			ColorSequenceKeypoint.new(0, Color3.fromRGB(100, 100, 255)),
			ColorSequenceKeypoint.new(1, Color3.fromRGB(80, 80, 200))
		}
	end
end)

-- Hover effect on button
loopButton.MouseEnter:Connect(function()
	game:GetService("TweenService"):Create(loopButton, TweenInfo.new(0.2), {
		Size = UDim2.new(1, -35, 0, 58)
	}):Play()
end)

loopButton.MouseLeave:Connect(function()
	game:GetService("TweenService"):Create(loopButton, TweenInfo.new(0.2), {
		Size = UDim2.new(1, -40, 0, 55)
	}):Play()
end)

-- Hover effect on textbox
speedTextBox.MouseEnter:Connect(function()
	game:GetService("TweenService"):Create(speedTextBox, TweenInfo.new(0.2), {
		BackgroundColor3 = Color3.fromRGB(45, 45, 65)
	}):Play()
end)

speedTextBox.MouseLeave:Connect(function()
	game:GetService("TweenService"):Create(speedTextBox, TweenInfo.new(0.2), {
		BackgroundColor3 = Color3.fromRGB(35, 35, 55)
	}):Play()
end)

print("✨ Loop Script GUI loaded successfully!")
